{
  "name": "votemak",
  "version": "1.0.0",
  "description": "Tokemak Vote Bribing",
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "license": "GPL-3.0",
  "homepage": "https://github.com/0xTomoyo/votemak",
  "bugs": "https://github.com/0xTomoyo/votemak/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/0xTomoyo/votemak.git"
  },
  "author": {
    "name": "0xTomoyo",
    "email": "0xtomoyo@protonmail.com",
    "url": "https://github.com/0xTomoyo"
  },
  "files": [
    "/contracts"
  ],
  "scripts": {
    "start": "vercel dev",
    "clean": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat clean",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "yarn typechain && hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "deploy": "hardhat deploy",
    "verify": "hardhat etherscan-verify",
    "deploy:api": "vercel deploy --prod",
    "lint": "yarn prettier && yarn lint:sol && yarn lint:ts",
    "lint:sol": "solhint --config ./.solhint.json --ignore-path ./.gitignore \"contracts/**/*.sol\" --fix",
    "lint:ts": "eslint --config ./.eslintrc.json --ignore-path ./.gitignore --ext .js,.ts . --fix",
    "prettier": "prettier --config ./.prettierrc.json --ignore-path ./.gitignore --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "yarn prettier --check",
    "prettier:data": "prettier --config ./.prettierrc.json --write \"data/**/*.json\"",
    "test": "hardhat test",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "snapshot": "ts-node src/snapshot.ts && yarn prettier:data",
    "snapshot-reactors": "ts-node src/reactors.ts && yarn prettier:data",
    "generate": "ts-node src/index.ts && yarn prettier:data",
    "validate": "ts-node src/validate.ts"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.12",
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/bytes": "^5.5.0",
    "@ethersproject/providers": "^5.5.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^8.0.1",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.2.22",
    "@types/fs-extra": "^9.0.13",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.1",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "@vercel/node": "^1.12.1",
    "chai": "^4.3.4",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethereumjs-util": "^7.1.3",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.6.8",
    "hardhat-deploy": "^0.9.4",
    "hardhat-deploy-ethers": "^0.3.0-beta.11",
    "hardhat-gas-reporter": "^1.0.4",
    "lodash": "^4.17.21",
    "prettier": "^2.4.1",
    "prettier-plugin-solidity": "^1.0.0-beta.18",
    "shelljs": "^0.8.4",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.3.0",
    "typechain": "^6.0.2",
    "typescript": "^4.4.4",
    "vercel": "^23.1.2"
  },
  "private": true,
  "dependencies": {
    "@openzeppelin/contracts": "^4.3.2",
    "ethers": "^5.5.1"
  }
}
